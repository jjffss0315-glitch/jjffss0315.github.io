        let currentQuestion = 0;
        let score = 0;
        let level = 1;
        let streak = 0;
        let gems = 0;
        let leaderboard = JSON.parse(localStorage.getItem('leaderboard')) || [];

        function updateStats() {
            document.getElementById('level').textContent = level;
            document.getElementById('score').textContent = score;
            document.getElementById('streak').textContent = streak;
            document.getElementById('gems').textContent = gems;
        }

        function showNeuralNetwork() {
            const container = document.getElementById('neuralNetwork');
            const layerSizes = [3, 4, 3, 2];
            
            container.innerHTML = '';
            container.className = 'neural-network';
            
            for (let i = 0; i < layerSizes.length; i++) {
                const layer = document.createElement('div');
                layer.className = 'layer';
                
                for (let j = 0; j < layerSizes[i]; j++) {
                    const neuron = document.createElement('div');
                    neuron.className = 'neuron';
                    neuron.textContent = 'âš¡';
                    neuron.onclick = () => {
                        neuron.classList.add('active');
                        setTimeout(() => neuron.classList.remove('active'), 500);
                    };
                    layer.appendChild(neuron);
                }
                
                container.appendChild(layer);
            }
        }

        function loadQuestion() {
            if (currentQuestion >= questions.length) {
                showGameComplete();
                return;
            }

            const q = questions[currentQuestion];
            level = q.level;
            
            document.getElementById('levelInfo').textContent = `ë ˆë²¨ ${q.level}: ${q.levelName}`;
            document.getElementById('questionText').textContent = q.question;
            
            showNeuralNetwork();
            
            const optionsContainer = document.getElementById('options');
            optionsContainer.innerHTML = '';
            
            q.options.forEach((option, index) => {
                const btn = document.createElement('button');
                btn.className = 'option-btn';
                btn.textContent = option;
                btn.onclick = () => checkAnswer(index, q.correct, q.explanation, btn);
                optionsContainer.appendChild(btn);
            });
            
            document.getElementById('feedback').classList.remove('show');
            document.getElementById('nextBtn').style.display = 'none';
            
            updateStats();
        }

        function checkAnswer(selected, correct, explanation, btn) {
            const allBtns = document.querySelectorAll('.option-btn');
            allBtns.forEach(b => b.disabled = true);
            
            const feedback = document.getElementById('feedback');
            
            if (selected === correct) {
                btn.classList.add('correct');
                feedback.className = 'feedback correct show';
                feedback.textContent = 'ğŸ‰ ' + explanation;
                
                const points = (streak + 1) * 10;
                score += points;
                streak++;
                gems += Math.floor(streak / 2);
                
                setTimeout(() => {
                    const neurons = document.querySelectorAll('.neuron');
                    neurons.forEach((n, i) => {
                        setTimeout(() => n.classList.add('active'), i * 100);
                        setTimeout(() => n.classList.remove('active'), i * 100 + 500);
                    });
                }, 300);
            } else {
                btn.classList.add('wrong');
                allBtns[correct].classList.add('correct');
                feedback.className = 'feedback wrong show';
                feedback.textContent = 'ğŸ’ª ë‹¤ì‹œ ë„ì „! ' + explanation;
                streak = 0;
            }
            
            updateStats();
            document.getElementById('nextBtn').style.display = 'block';
        }

        function nextQuestion() {
            currentQuestion++;
            loadQuestion();
        }

        function showGameComplete() {
            document.querySelector('.game-area').innerHTML = `
                <div style="text-align: center; padding: 50px;">
                    <h2 style="font-size: 3em; margin-bottom: 20px;">ğŸŠ ì¶•í•˜í•©ë‹ˆë‹¤! ğŸŠ</h2>
                    <p style="font-size: 1.5em; margin-bottom: 30px;">ë”¥ëŸ¬ë‹ ë§ˆìŠ¤í„°ê°€ ë˜ì—ˆì–´ìš”!</p>
                    <div style="background: white; padding: 30px; border-radius: 20px; margin: 20px 0;">
                        <p style="font-size: 2em; margin: 10px 0;">ìµœì¢… ì ìˆ˜: ${score}ì </p>
                        <p style="font-size: 1.5em; margin: 10px 0;">íšë“ ë³´ì„: ${gems}ê°œ ğŸ’</p>
                    </div>
                    <button onclick="location.reload()" style="padding: 20px 40px; font-size: 1.3em; border: none; border-radius: 15px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; cursor: pointer; font-weight: bold; margin-top: 20px;">ë‹¤ì‹œ ë„ì „í•˜ê¸° ğŸ”„</button>
                </div>
            `;
            
            saveScore();
            updateLeaderboard();
        }

        function saveScore() {
            leaderboard.push({ score, gems, date: new Date().toLocaleDateString() });
            leaderboard.sort((a, b) => b.score - a.score);
            leaderboard = leaderboard.slice(0, 5);
            localStorage.setItem('leaderboard', JSON.stringify(leaderboard));
        }

        function updateLeaderboard() {
            const list = document.getElementById('leaderboardList');
            list.innerHTML = '';
            
            const medals = ['ğŸ¥‡', 'ğŸ¥ˆ', 'ğŸ¥‰', 'ğŸ…', 'ğŸ…'];
            
            leaderboard.forEach((entry, index) => {
                const item = document.createElement('div');
                item.className = 'leader-item';
                item.innerHTML = `
                    <span><span class="medal">${medals[index]}</span> ${entry.score}ì </span>
                    <span>${entry.gems}ğŸ’ | ${entry.date}</span>
                `;
                list.appendChild(item);
            });
        }

        loadQuestion();
        updateLeaderboard();
    </script>
</body>
</html>
