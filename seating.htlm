        }

    </style>
</head>
<body>

    <h1>ğŸ« í•™ê¸‰ ìë¦¬ ë°°ì¹˜</h1>

    <div class="control-panel">
        <div class="input-group">
            <label for="studentCount">í•™ìƒ ìˆ˜:</label>
            <input type="number" id="studentCount" value="20" min="1" max="50">
            <button onclick="generateStudentInputs()">1. í•™ìƒ ëª…ë‹¨ ìƒì„±</button>
            <span style="flex-grow: 1;"></span>
            <button class="secondary" onclick="resetDesks()">ë°°ì¹˜ ì´ˆê¸°í™”</button>
        </div>

        <div id="studentListArea" class="student-list-area">
            <!-- í•™ìƒ ì´ë¦„ ì…ë ¥ ì¹¸ë“¤ì´ ì—¬ê¸°ì— ìƒì„±ë©ë‹ˆë‹¤ -->
            <div style="color: #6b7280; grid-column: 1/-1; text-align: center;">í•™ìƒ ìˆ˜ë¥¼ ì…ë ¥í•˜ê³  ìƒì„± ë²„íŠ¼ì„ ëˆŒëŸ¬ì£¼ì„¸ìš”.</div>
        </div>

        <div class="input-group" style="justify-content: center;">
            <button onclick="assignSeats()" style="font-size: 1.2rem; padding: 12px 40px;">2. ìë¦¬ ë°°ì •í•˜ê¸° ğŸ²</button>
        </div>
        <div id="systemMessage" class="message"></div>
    </div>

    <div class="classroom-container">
        <div id="deskGrid" class="desk-grid">
            <!-- ì±…ìƒë“¤ì´ ì—¬ê¸°ì— ìƒì„±ë©ë‹ˆë‹¤ -->
        </div>
    </div>

    <script>
        // ëœë¤ ì´ë¦„ ìƒì„±ì„ ìœ„í•œ ë°ì´í„°
        const lastNames = ['ê¹€', 'ì´', 'ë°•', 'ìµœ', 'ì •', 'ê°•', 'ì¡°', 'ìœ¤', 'ì¥', 'ì„', 'í•œ', 'ì˜¤', 'ì„œ', 'ì‹ ', 'ê¶Œ', 'í™©', 'ì•ˆ', 'ì†¡', 'ì „', 'í™'];
        const firstNames = ['ë¯¼ì¤€', 'ì„œì¤€', 'ë„ìœ¤', 'ì˜ˆì¤€', 'ì‹œìš°', 'í•˜ì¤€', 'ì§€í˜¸', 'ì§€ìœ ', 'ì„œìœ¤', 'ì„œì—°', 'ì§€ìš°', 'í•˜ìœ¤', 'ì„œí˜„', 'ë¯¼ì„œ', 'ì§€ë¯¼', 'ì±„ì›', 'ìˆ˜ì•„', 'ë‹¤ì€', 'ì€ìš°', 'ê±´ìš°'];

        let students = [];
        let draggedDesk = null;

        // ì´ˆê¸° ì‹¤í–‰
        window.onload = function() {
            createDesks(24); // ê¸°ë³¸ 24ìë¦¬ ìƒì„±
            generateStudentInputs(); // ê¸°ë³¸ í•™ìƒ ìƒì„±
        };

        // ëœë¤ ì´ë¦„ ìƒì„± í•¨ìˆ˜
        function getRandomName() {
            const last = lastNames[Math.floor(Math.random() * lastNames.length)];
            const first = firstNames[Math.floor(Math.random() * firstNames.length)];
            return last + first;
        }

        // í•™ìƒ ì…ë ¥ í•„ë“œ ìƒì„±
        function generateStudentInputs() {
            const count = document.getElementById('studentCount').value;
            const container = document.getElementById('studentListArea');
            container.innerHTML = '';

            for (let i = 0; i < count; i++) {
                const input = document.createElement('input');
                input.type = 'text';
                input.className = 'student-input';
                input.value = getRandomName();
                input.placeholder = `í•™ìƒ ${i + 1}`;
                container.appendChild(input);
            }
            showMessage(`í•™ìƒ ${count}ëª…ì˜ ëª…ë‹¨ì´ ìƒì„±ë˜ì—ˆìŠµë‹ˆë‹¤.`);
        }

        // ì±…ìƒ ë°°ì¹˜ ìƒì„± (ê¸°ë³¸ 6ì—´ 4í–‰ = 24ê°œ)
        function createDesks(totalDesks) {
            const grid = document.getElementById('deskGrid');
            grid.innerHTML = '';

            for (let i = 0; i < totalDesks; i++) {
                const desk = document.createElement('div');
                desk.className = 'desk';
                desk.draggable = true;
                desk.id = `desk-${i}`;
                desk.setAttribute('data-index', i);
                
                // ì±…ìƒ ë²ˆí˜¸ í‘œì‹œ
                const number = document.createElement('span');
                number.className = 'desk-number';
                number.innerText = i + 1;
                desk.appendChild(number);

                // ì´ë¦„ í‘œì‹œ ì˜ì—­
                const nameSpan = document.createElement('span');
                nameSpan.className = 'student-name';
                nameSpan.innerText = 'ë¹ˆ ìë¦¬';
                desk.appendChild(nameSpan);

                // ë“œë˜ê·¸ ì•¤ ë“œë¡­ ì´ë²¤íŠ¸ ì—°ê²°
                addDragEvents(desk);

                grid.appendChild(desk);
            }
        }

        // ì±…ìƒ ì´ˆê¸°í™”
        function resetDesks() {
            createDesks(24);
            const desks = document.querySelectorAll('.desk .student-name');
            desks.forEach(span => span.innerText = 'ë¹ˆ ìë¦¬');
            showMessage("ìë¦¬ê°€ ì´ˆê¸°í™”ë˜ì—ˆìŠµë‹ˆë‹¤.");
        }

        // ë“œë˜ê·¸ ì•¤ ë“œë¡­ ì´ë²¤íŠ¸ ì²˜ë¦¬
        function addDragEvents(desk) {
            desk.addEventListener('dragstart', function(e) {
                draggedDesk = this;
                this.classList.add('dragging');
                e.dataTransfer.effectAllowed = 'move';
                e.dataTransfer.setData('text/html', this.innerHTML);
            });

            desk.addEventListener('dragend', function() {
                this.classList.remove('dragging');
                const desks = document.querySelectorAll('.desk');
                desks.forEach(d => d.classList.remove('drag-over'));
                draggedDesk = null;
            });

            desk.addEventListener('dragover', function(e) {
                e.preventDefault(); // ë“œë¡­ í—ˆìš©
                if (this !== draggedDesk) {
                    this.classList.add('drag-over');
                }
                return false;
            });

            desk.addEventListener('dragleave', function() {
                this.classList.remove('drag-over');
            });

            desk.addEventListener('drop', function(e) {
                e.stopPropagation();
                
                if (draggedDesk !== this) {
                    // ë‚´ìš©(ì´ë¦„)ë§Œ êµí™˜í•˜ëŠ” ê²ƒì´ ì•„ë‹ˆë¼ ì±…ìƒ ìì²´ì˜ ìœ„ì¹˜(ë‚´ìš© ì „ì²´)ë¥¼ êµí™˜
                    const sourceHTML = draggedDesk.innerHTML;
                    const targetHTML = this.innerHTML;

                    draggedDesk.innerHTML = targetHTML;
                    this.innerHTML = sourceHTML;

                    // êµí™˜ í›„ ìŠ¤íƒ€ì¼ ì´ˆê¸°í™”
                    this.classList.remove('drag-over');
                    
                    // ì±…ìƒ ë²ˆí˜¸ëŠ” ìœ„ì¹˜ì— ë”°ë¼ ë‹¤ì‹œ ì •ë ¬í•˜ì§€ ì•Šê³ , 
                    // ì‚¬ìš©ìê°€ ì±…ìƒì„ í†µì§¸ë¡œ ì˜®ê²¼ë‹¤ëŠ” ëŠë‚Œì„ ì£¼ê¸° ìœ„í•´ ë‚´ë¶€ ì»¨í…ì¸ (ì´ë¦„, ë²ˆí˜¸ ë“±)ë¥¼ ëª¨ë‘ ë°”ê¿ˆ.
                    // ë§Œì•½ ë²ˆí˜¸ëŠ” ê³ ì •í•˜ê³  ì´ë¦„ë§Œ ë°”ê¾¸ê³  ì‹¶ë‹¤ë©´ ë¡œì§ì„ ìˆ˜ì •í•´ì•¼ í•¨.
                    // í˜„ì¬: ì±…ìƒ í†µì§¸ë¡œ ì´ë™ (ë²ˆí˜¸ë„ ê°™ì´ ì´ë™ë¨)
                }
                return false;
            });
        }

        // ìë¦¬ ë°°ì • ë¡œì§
        function assignSeats() {
            // 1. í˜„ì¬ ì…ë ¥ëœ í•™ìƒ ëª…ë‹¨ ê°€ì ¸ì˜¤ê¸°
            const inputs = document.querySelectorAll('.student-input');
            let studentNames = Array.from(inputs).map(input => input.value.trim()).filter(name => name !== '');

            // 2. ì±…ìƒ ê°œìˆ˜ í™•ì¸
            const desks = document.querySelectorAll('.desk');
            
            if (studentNames.length > desks.length) {
                alert(`ì±…ìƒì´ ë¶€ì¡±í•©ë‹ˆë‹¤! (í•™ìƒ: ${studentNames.length}ëª…, ì±…ìƒ: ${desks.length}ê°œ)\nì±…ìƒ ë°°ì¹˜ë¥¼ í™•ì¸í•´ì£¼ì„¸ìš”.`);
                return;
            }

            // 3. í•™ìƒ ì´ë¦„ ì„ê¸° (Fisher-Yates Shuffle)
            for (let i = studentNames.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [studentNames[i], studentNames[j]] = [studentNames[j], studentNames[i]];
            }

            // 4. ì±…ìƒì— ë°°ì¹˜
            desks.forEach((desk, index) => {
                const nameSpan = desk.querySelector('.student-name');
                
                // ì• ë‹ˆë©”ì´ì…˜ íš¨ê³¼ë¥¼ ìœ„í•´ ì ì‹œ íˆ¬ëª…í•˜ê²Œ
                nameSpan.style.opacity = 0;
                
                setTimeout(() => {
                    if (index < studentNames.length) {
                        nameSpan.innerText = studentNames[index];
                        nameSpan.style.color = "#000";
                        nameSpan.style.fontWeight = "bold";
                    } else {
                        nameSpan.innerText = "ë¹ˆ ìë¦¬";
                        nameSpan.style.color = "#9ca3af";
                        nameSpan.style.fontWeight = "normal";
                    }
                    nameSpan.style.opacity = 1;
                }, 100 + (index * 30)); // ìˆœì°¨ì ìœ¼ë¡œ ë‚˜íƒ€ë‚˜ëŠ” íš¨ê³¼
            });

            showMessage("ìë¦¬ ë°°ì •ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤!");
        }

        function showMessage(msg) {
            const el = document.getElementById('systemMessage');
            el.innerText = msg;
            setTimeout(() => { el.innerText = ''; }, 3000);
        }
    </script>
