            gap: 15px;
            min-width: 600px; /* ë„ˆë¬´ ì¢ì•„ì§€ì§€ ì•Šê²Œ */
        }

        .desk {
            background-color: var(--desk-color);
            border: 2px solid var(--desk-border);
            border-radius: 8px;
            height: 80px;
            display: flex;
